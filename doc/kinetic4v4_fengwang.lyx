\begin_layout Paragraph
The linearized drift kinetic equation assuming 
\begin_inset Formula $\delta E_{\parallel}=0$
\end_inset

 is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left(\partial_{t}+\mathbf{v}_{d}\cdot\nabla+v_{\parallel}\hat{\mathbf{b}}\cdot\nabla\right)g=i\frac{e}{M}\frac{\partial F}{\partial\epsilon}\left(\omega-\omega_{\star}\right)\frac{i}{\omega}\mathbf{v}_{d}\cdot\delta\mathbf{E}_{\perp}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where,
\begin_inset Formula $\mathbf{v}_{d}=\frac{\hat{\mathbf{b}}}{\omega_{c}}\times\left(\mu\nabla B+\mathbf{\kappa}v_{\parallel}^{2}\right)\approx\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\hat{\mathbf{b}}\times\vec{\kappa}$
\end_inset

, 
\begin_inset Formula $\vec{\kappa}=\hat{\mathbf{b}}\cdot\nabla\hat{\mathbf{b}}$
\end_inset

, 
\begin_inset Formula $\mu=\frac{v_{\perp}^{2}}{2B}$
\end_inset

, 
\begin_inset Formula $\omega_{\star}=\frac{i\hat{\mathbf{b}}\times\nabla F\cdot\nabla}{\omega_{c}\partial F/\partial\epsilon}$
\end_inset

, 
\begin_inset Formula $\epsilon=v^{2}/2=v_{\parallel}^{2}/2+\mu B$
\end_inset

, 
\begin_inset Formula $\delta\mathbf{E}_{\perp}=i\omega\vec{\mathbb{\xi}}\times\mathbf{B}$
\end_inset

, 
\begin_inset Formula $\omega_{c}=\frac{Be}{M}$
\end_inset

 is the particle cyclotron frequency.[Berk et al, Phys.
 Fluid B 4 1992].
 Note that the alter expression for 
\begin_inset Formula $\omega_{\star}$
\end_inset

 is 
\begin_inset Formula $\omega_{\star}=\frac{\partial F/\partial P_{\phi}}{M\partial F/\partial\epsilon}i\frac{\partial}{\partial\phi}=\frac{nq\partial_{r}F}{\omega_{c}r\partial_{\epsilon}F}$
\end_inset

.
\end_layout

\begin_layout Paragraph
The term 
\begin_inset Formula $\mathbf{v}_{d}\cdot\delta\mathbf{E}_{\perp}$
\end_inset

 can be expressed by the following form.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathbf{v}_{d}\cdot\delta\mathbf{E}_{\perp}=\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\hat{\mathbf{b}}\times\mathbf{\kappa}\cdot\delta\mathbf{E}_{\perp}=i\omega\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\hat{\mathbf{b}}\times\vec{\kappa}\cdot\left(\vec{\xi}\times\mathbf{B}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=-i\omega B\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\vec{\kappa}\cdot\vec{\xi}=-i\omega B\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\left(\nabla\theta\kappa_{\theta}+\nabla r\kappa_{r}\right)\cdot\left({\color{red}\xi}_{\theta}\nabla\theta+{\color{red}\xi_{r}}\nabla r\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=-i\omega B\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\left(\nabla\theta\cdot\nabla\theta\xi_{\theta}\kappa_{\theta}+\nabla r\cdot\nabla r\xi_{r}\kappa_{r}+\nabla\theta\cdot\nabla r\xi_{r}\kappa_{\theta}+\nabla r\cdot\nabla\theta\xi_{\theta}\kappa_{r}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=-i\omega B\frac{\epsilon}{\omega_{c}}\left(\frac{\Lambda}{b}+2\left(1-\frac{\Lambda}{b}\right)\right)\left(\left(g^{\theta\theta}\kappa_{\theta}+g^{r\theta}\kappa_{r}\right)\xi_{\theta}+\left(g^{rr}\kappa_{r}+g^{r\theta}\kappa_{\theta}\right)\xi_{r}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
with 
\begin_inset Formula $g^{rr}=\nabla r\cdot\nabla r$
\end_inset

, 
\begin_inset Formula $g^{\theta r}=\nabla\theta\cdot\nabla r$
\end_inset

, 
\begin_inset Formula $g^{\theta\theta}=\nabla\theta\cdot\nabla\theta$
\end_inset

.
 
\begin_inset Formula $\xi_{r}\nabla r=\xi_{r}\mathbf{e}_{r}$
\end_inset

, 
\begin_inset Formula $\xi_{\theta}\nabla\theta=\frac{1}{r}\xi_{\theta}\mathbf{e}_{\theta}$
\end_inset

, 
\begin_inset Formula $\kappa_{\theta}=-\frac{1}{R}\frac{\partial R}{\partial\theta}$
\end_inset

, 
\begin_inset Formula $\kappa_{r}\approx-\frac{1}{R}\frac{\partial R}{\partial r}-\frac{r}{q^{2}R^{2}}$
\end_inset

 [G.
 Y.
 Fu, PHYSICS OF PLASMAS 13 2006].
 
\begin_inset Formula $\Lambda=\frac{\mu B_{0}}{\epsilon}$
\end_inset

, 
\begin_inset Formula $b=B_{0}/B\approx1+\left(r/R_{0}\right)\cos\theta$
\end_inset

.
 Using 
\begin_inset Formula $\delta\mathbf{E}_{\perp}^{\star}=-i\omega\vec{\xi}^{\star}\times\mathbf{B}$
\end_inset

, the complex conjugate term thus is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathbf{v}_{d}\cdot\delta\mathbf{E}_{\perp}^{\star}=\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\hat{\mathbf{b}}\times\mathbf{\kappa}\cdot\delta\mathbf{E}_{\perp}^{\star}=-i\omega\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\hat{\mathbf{b}}\times\vec{\kappa}\cdot\left(\vec{\xi}^{\star}\times\mathbf{B}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=i\omega B\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\vec{\kappa}\cdot\vec{\xi}^{\star}=i\omega B\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\left(\nabla\theta\kappa_{\theta}+\nabla r\kappa_{r}\right)\cdot\left({\color{red}\xi}_{\theta}^{\star}\nabla\theta+{\color{red}\xi_{r}^{\star}}\nabla r\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=i\omega B\frac{v_{\perp}^{2}/2+v_{\parallel}^{2}}{\omega_{c}}\left(\nabla\theta\cdot\nabla\theta\xi_{\theta}^{\star}\kappa_{\theta}+\nabla r\cdot\nabla r\xi_{r}^{\star}\kappa_{r}+\nabla\theta\cdot\nabla r\xi_{r}^{\star}\kappa_{\theta}+\nabla r\cdot\nabla\theta\xi_{\theta}^{\star}\kappa_{r}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
=i\omega B\frac{\epsilon}{\omega_{c}}\left(\frac{\Lambda}{b}+2\left(1-\frac{\Lambda}{b}\right)\right)\left(\left(g^{\theta\theta}\kappa_{\theta}+g^{r\theta}\kappa_{r}\right)\xi_{\theta}^{\star}+\left(g^{rr}\kappa_{r}+g^{r\theta}\kappa_{\theta}\right)\xi_{r}^{\star}\right)
\]

\end_inset


\end_layout

\begin_layout Paragraph
The linearized drift kinetic equation is rewritten as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{d}{dt}g=i\frac{e}{M}\frac{\partial F}{\partial\epsilon}\left(\omega-\omega_{\star}\right)B\frac{\epsilon}{\omega_{c}}\left(\frac{\Lambda}{b}+2\left(1-\frac{\Lambda}{b}\right)\right)\left(\left(g^{\theta\theta}\kappa_{\theta}+g^{r\theta}\kappa_{r}\right)\xi_{\theta}+\left(g^{rr}\kappa_{r}+g^{r\theta}\kappa_{\theta}\right)\xi_{r}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{d}{dt}g=H\left(r,\theta,\phi,t\right)
\]

\end_inset


\end_layout

