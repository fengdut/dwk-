\begin_layout Standard
The dwk++ code calculate the fishbone dispersion relation:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\delta W_{mhd}+\delta W_{k}+\delta I=0
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Assume 
\begin_inset Formula $\delta W_{mhd}=0$
\end_inset

, the equation reduced to:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{4}{\pi}(\frac{r_{s}}{R_{0}})^{2}|\frac{\xi_{s}}{\xi_{0}}|^{2}(-i\frac{\omega}{\omega_{A}})+\beta_{h}\delta\bar{W}_{k}=0
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\omega=-iC\delta W_{k}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
i\omega=C\delta W_{k}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
C=\frac{\omega_{A}}{\omega_{0}}\frac{\beta_{h}}{\frac{4}{\pi}(\frac{r_{s}}{R_{0}})^{2}|\frac{\xi_{s}}{\xi_{0}}|^{2}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\omega_{A}=\frac{2}{\tau_{A\theta}s}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\tau_{A\theta}=\frac{3^{1/2}r_{s}}{(B_{\theta s}^{2}/\mu_{0}\rho_{m})^{1/2}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
s=r_{s}\frac{dq}{dr(r=r_{s})}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $CF=\int dEd\Lambda\frac{1}{\epsilon^{3/2}+\epsilon_{c}^{3/2}}Erfc\left(\frac{\epsilon-\epsilon_{0}}{\Delta\epsilon}\right)\exp\left(-(\frac{\Lambda-\Lambda_{0}}{\Delta\Lambda})^{2}\right)$
\end_inset


\end_layout

